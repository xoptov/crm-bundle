<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="perfico_crm.pbx.call_manager" class="Perfico\CRMBundle\Service\Manager\PBX\CallManager">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
        </service>

        <service id="perfico_crm.pbx.event_manager" class="Perfico\CRMBundle\Service\Manager\PBX\EventManager">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="core.manager.client"/>
            <argument type="service" id="core.manager.user"/>
            <argument type="service" id="translator.default"/>
        </service>

    </services>

</container>