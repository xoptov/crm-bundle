<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Perfico\CRMBundle\Entity\SubTask" table="sub_task">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="note" type="text" column="note" precision="0" scale="0" nullable="true"/>
        <field name="completed" type="boolean" column="completed" precision="0" scale="0" nullable="true"/>

    </mapped-superclass>

</doctrine-mapping>
