<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Perfico\CRMBundle\Entity\User" table="user">
        
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        
        <field name="firstName" type="string" column="first_name" length="255" nullable="true"/>
        <field name="lastName" type="string" column="last_name" length="255" nullable="true"/>
        <field name="middleName" type="string" column="middle_name" length="255" nullable="true"/>
        <field name="phone" type="string" column="phone" length="255" nullable="true"/>
        <field name="photo" type="string" column="photo" length="255" nullable="true"/>
        
        <many-to-one field="account" target-entity="Perfico\CRMBundle\Entity\AccountInterface">
            <join-columns>
                <join-column name="account_id" referenced-column-name="id" nullable="true"/>
            </join-columns>
        </many-to-one>

        <many-to-many target-entity="Perfico\CRMBundle\Entity\AccountInterface" field="accounts">
            <join-table name="users_has_accounts">
                <join-columns>
                    <join-column name="user_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="account_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        
    </mapped-superclass>

</doctrine-mapping>
