<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Perfico\DosalesBundle\Entity\Deal" table="deal">

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="onCreate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="amount" type="float" column="amount" precision="0" scale="0" nullable="true"/>
        <field name="createdAt" type="datetime" column="created_at" precision="0" scale="0" nullable="false"/>
        <field name="note" type="string" column="note" length="255" precision="0" scale="0" nullable="true"/>

        <many-to-one field="account" target-entity="Perfico\DosalesBundle\Entity\AccountInterface">
            <join-columns>
                <join-column name="account_id" referenced-column-name="id" nullable="true"/>
            </join-columns>
        </many-to-one>

        <many-to-one field="user" target-entity="Perfico\DosalesBundle\Entity\UserInterface" inversed-by="deals">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id" nullable="true"/>
            </join-columns>
        </many-to-one>

        <many-to-one field="client" target-entity="Perfico\DosalesBundle\Entity\ClientInterface" inversed-by="deals">
            <join-columns>
                <join-column name="client_id" referenced-column-name="id" nullable="true" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>

        <many-to-one field="state" target-entity="Perfico\DosalesBundle\Entity\DealStateInterface" inversed-by="deals">
            <join-columns>
                <join-column name="state_id" referenced-column-name="id" nullable="true"/>
            </join-columns>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
