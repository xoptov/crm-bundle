<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Perfico\DosalesBundle\Entity\Phone" table="phone">

        <indexes>
            <index columns="number" name="search_idx"/>
        </indexes>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        
        <field name="number" type="string" column="number" length="20" precision="0" scale="0" nullable="true"/>
        
        <many-to-one field="account" target-entity="Perfico\DosalesBundle\Entity\AccountInterface">
            <join-columns>
                <join-column name="account_id" referenced-column-name="id" nullable="true"/>
            </join-columns>
        </many-to-one>
        
        <many-to-one field="client" target-entity="Perfico\DosalesBundle\Entity\ClientInterface" inversed-by="phones">
            <join-columns>
                <join-column name="client_id" referenced-column-name="id" nullable="true" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        
    </mapped-superclass>

</doctrine-mapping>
