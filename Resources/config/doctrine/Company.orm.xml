<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Perfico\CRMBundle\Entity\Company" table="company">
        
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        
        <field name="name" type="string" column="name" length="255" precision="0" scale="0" nullable="true"/>

        <many-to-one field="user" target-entity="Perfico\CRMBundle\Entity\UserInterface">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>

        <many-to-one field="account" target-entity="Perfico\CRMBundle\Entity\AccountInterface">
            <join-columns>
                <join-column name="account_id" referenced-column-name="id" nullable="true"/>
            </join-columns>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
